{
	email {$EMAIL}
}

(cloudflare) {
	tls {
		dns cloudflare {$CLOUDFLARE_API_TOKEN}
	}
}

# --- Services ---

jellyfin.{$DOMAIN} {
	import cloudflare
	reverse_proxy jellyfin:8096
}

sonarr.{$DOMAIN} {
	import cloudflare
	reverse_proxy sonarr:8989
}

