	import cloudflare
	reverse_proxy qbittorrent:9091
}

homarr.{$DOMAIN} {
	import cloudflare
	reverse_proxy homarr:7575
}

dash.{$DOMAIN} {
	import cloudflare
	reverse_proxy dashdot:3001
}

beszel.{$DOMAIN} {
	import cloudflare
	reverse_proxy beszel:8090
}

vault.{$DOMAIN} {
	import cloudflare
	reverse_proxy vaultwarden:80 {
		header_up X-Real-IP {remote_host}
		header_up X-Forwarded-Proto {scheme}
	}
}
